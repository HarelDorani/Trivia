<Window x:Class="clientApp.highScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clientApp"
        mc:Ignorable="d"
        Title="highScoreWindow" Height="450" Width="800">
    <Grid>
        <Image Source="createRoomPage.jpg" Stretch="Fill" />

        <TextBlock Text="High Scores" 
                   FontSize="32" 
                   FontWeight="Bold" 
                   Foreground="Yellow"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Margin="329,31,0,0" />
        <ListBox x:Name="HighScoresListBox"
                 Margin="259,98,237,96" 
                 FontSize="20" 
                 Foreground="White" 
                 Background="Transparent" />
        <Button Content="Exit" 
            Width="75" Height="30"
            HorizontalAlignment="Right" 
            VerticalAlignment="Top" 
            Margin="0,22,689,0"
            Click="ExitButton_Click"/>
    </Grid>
</Window>

