<Window x:Class="clientApp.PersonalStatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clientApp"
        mc:Ignorable="d"
        Title="PersonalStatsWindow" Height="450" Width="800">
    <Grid>
        <Image Source="createRoomPage.jpg" Stretch="Fill" />
        <TextBlock Text="Personal Statistics" 
                   FontSize="32" 
                   FontWeight="Bold" 
                   Foreground="Yellow"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,31,0,0" />
        <Button Content="Exit" 
            Width="75" Height="30"
            HorizontalAlignment="Right" 
            VerticalAlignment="Top" 
            Margin="0,22,689,0"
            Click="ExitButton_Click"/>
        <ListBox x:Name="StatsListBox"
                 Margin="223,79,237,90"
                 FontSize="16"
                 Background="Transparent"
                 Foreground="White" />
    </Grid>
</Window>
