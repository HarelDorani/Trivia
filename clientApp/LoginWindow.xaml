<Window x:Class="clientApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clientApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.643,0.511">
        <!-- Background Image -->
        <Image x:Name="image" Source="loginPage.jpg" Stretch="Fill" RenderTransformOrigin="-0.052,0.508"/>
        <!-- Invisible username textbox -->
        <TextBox x:Name="UsernameTextBox"
         Width="309" Height="30"
         Margin="243,143,0,0"
         HorizontalAlignment="Left"
         VerticalAlignment="Top"
         Background="Transparent"
         BorderThickness="0"
         Foreground="Black"
         FontSize="16" />
        <PasswordBox x:Name="PasswordBox"
             Width="309" Height="40"
             Margin="243,0,0,0"
             HorizontalAlignment="Left"
             VerticalAlignment="Center"
             Background="Transparent"
             BorderThickness="0"
             Foreground="Black"
             FontSize="16" />
        <!-- Login button -->
        <Button Click="LoginButton_Click"
                Width="327" Height="37"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="243,253,0,0"
                Cursor="Hand" RenderTransformOrigin="1.216,-0.849">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Signup button -->
        <Button Click="SignupButton_Click"
                Width="140" Height="35"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,310,0,0"
                Cursor="Hand" RenderTransformOrigin="-0.322,0.431">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
