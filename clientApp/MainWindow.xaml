<Window x:Class="clientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trivia Quiz" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Background Image -->
        <Image x:Name="image" Source="homePage.png" Stretch="Fill" Grid.ColumnSpan="2"/>

        <Button Click="LetsPlayButton_Click"
        Width="160" Height="50"
        HorizontalAlignment="Left" VerticalAlignment="Top"
        Margin="200,338,0,0"
        Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>